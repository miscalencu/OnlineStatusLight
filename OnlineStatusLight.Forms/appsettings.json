{
  "sourceService": {
    "type": "windowsAutomation",
    "logFile": {
      "interval": 5,
      "path": "%appdata%\\Microsoft\\Teams\\logs.txt"
    },
    "azure": {
      "interval": 5,
      "authority": "https://login.microsoftonline.com",
      "tenantId": "",
      "clientId": "",
      "clientSecret": "",
      "redirectUri": ""
    },
    "windowsAutomation": {
      "interval": 5,
      "windowName": "Microsoft Teams",
      "processName": "ms-teams",
      "restartArgument": "--minimized",
      "processRestart": true,
      "statusPattern": "Your profile, status @status"
    }
  },
  "lightService": {
    "type": "sonOff",
    "sonOff": {
      "version": "3.7",
      "timeoutInSeconds": 5,
      "red": {
        "ip": "192.168.0.62"
      },
      "green": {
        "ip": "192.168.0.61"
      }
    },
    "razer": {
      "headsetOnly": true
    }
  }
}